<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/now_playing_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:scaleType="centerCrop" />

    <!--<TextView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="22dp"-->
    <!--android:text="NOW PLAYING"-->
    <!--android:textAlignment="center" />-->

    <TextView
        android:id="@+id/now_playing_song_view"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="bottom"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Song Title" />

    <TextView
        android:id="@+id/now_playing_artist_view"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textStyle="italic"
        tools:text="Artist Name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previous_track_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_skip_previous_black_36" />

        <ImageView
            android:id="@+id/pause_image_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_pause_circle_outline_black_48" />

        <ImageView
            android:id="@+id/next_track_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_skip_next_black_36" />

    </LinearLayout>

</LinearLayout>