<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/category_songs"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/now_playing_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/album_image_view_descriptions"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/now_playing_song_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/now_playing_text_view_height"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:textSize="@dimen/songs_text_view_text_size"
        android:textStyle="bold"
        tools:text="Song Title" />

    <TextView
        android:id="@+id/now_playing_artist_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/now_playing_text_view_height"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:textStyle="italic"
        tools:text="Artist Name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/now_playing_layout_height"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previous_track_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/previous_track_button"
            android:src="@drawable/baseline_skip_previous_black_36" />

        <ImageView
            android:id="@+id/pause_image_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/pause_track_button"
            android:src="@drawable/baseline_pause_circle_outline_black_48" />

        <ImageView
            android:id="@+id/next_track_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/next_track_button"
            android:src="@drawable/baseline_skip_next_black_36" />

    </LinearLayout>

</LinearLayout>